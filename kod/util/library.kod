      // mood only set on initial create

      local lClassBranch, lSpeechBranch, iCurrKey, iHighKey, lNewSpeechBranch, sScratch;

      if (keynum = -1)
      {
         keynum = piLastRandomKey;
         npc_class = pcLastRandomClass;
