            SetNth(lClassBranch,2,Cons(lNewSpeechBranch,Nth(lClassBranch,2)));

            pcLastRandomClass = npc_class;
            piLastRandomKey = iHighKey;

            return iHighKey;
         }
      }

      // class not found, create new branch
      if (TRUE) // want a way to validate a class name here
